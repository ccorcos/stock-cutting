{
	"compileOnSave": false,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"removeComments": true,
		"strictNullChecks": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"lib": ["es2015", "es2016"],
		"outDir": "lib",
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
